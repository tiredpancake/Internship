{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["@new-workspace/source"],
    "baseUrl": ".",
    "paths": {
      "@assets/*": ["apps/my-app/src/assets/*"],
      "@components/*": ["apps/my-app/src/components/*"],
      "@styles/*": ["apps/my-app/src/styles/*"]
    }
  }
}
